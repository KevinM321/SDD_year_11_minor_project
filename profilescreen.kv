#:import CardTransition kivy.uix.screenmanager.CardTransition

<ProfileScreen@Screen>:
    name: 'profile_screen'
    screen_manager: self.screen_manager

    ProfileScreenLayout:
        screen_manager: root.screen_manager

<CardPopup>:
    orientation: 'vertical'
    Label:
        markup: True
        text: '[b]Card Info[b]'
        font_size: 45
    InputBox:
        l_text: "Card Number"
        input_text: ''
        center_x: root.center_x
    InputBox:
        l_text: 'Card Pin'
        input_text: ''
        center_x: root.center_x
    BoxLayout:
        InputBox:
        InputBox:
        InputBox:
    Label:


<CardInfoPopup>:
    card_image: _card_image
    orientation: 'vertical'
    Image:
        id: _card_image
        source: 'res/Images/credit_card.png'
    BoxLayout:
        Button:
            size_hint_y: .3
            text: 'Bind Card'
            on_release: root.bind_card()
        Label:
            size_hint_x: .7
        Button:
            size_hint_y: .3
            text: 'Change Card'

<ProfileScreenLayout>:
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager

    ToolBarHeader:
        screen_manager: root.screen_manager
    Label:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: top_height
        canvas:
            Color:
                rgba: 0.25, 0.25, 0.25, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            on_release:
            text: '[b]Change Password[/b]'
        InterfaceButton:
            on_release: root.card_info()
            text: '[b]Card Info[/b]'
        InterfaceButton:
            on_release: root.screen_manager.current = 'login_screen'
            on_release: root.screen_manager.transition = CardTransition(direction='down', mode='push')
            text: '[b]Logout[/b]'