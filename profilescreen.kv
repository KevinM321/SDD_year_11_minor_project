#:import CardTransition kivy.uix.screenmanager.CardTransition

<ProfileScreen@Screen>:
    name: 'profile_screen'
    screen_manager: self.screen_manager

    ProfileScreenLayout:
        screen_manager: root.screen_manager

#Small input box designed as date boxes in CardPopup
<SmallInputBox@TextInput>
    multiline: False
    write_tab: False
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
    size_hint: None, None
    size: 250, 50
    cursor_color: 0, 0, 0, 1

#Popup layout for binding or changing card bind
<CardPopup>:
    bind_card_popup_footer: _bind_card_popup_footer
    orientation: 'vertical'
    Label:
        markup: True
        text: '[b]Card Info[b]'
        font_size: 45
    InputBox:
        l_text: "Card Number"
        input_text: ''
        center_x: root.center_x
    InputBox:
        l_text: 'Card Pin'
        input_text: ''
        center_x: root.center_x
    BoxLayout:
        size_hint_x: None
        width: self.minimum_width
        pos_hint: {"center_x": .5}
        spacing: 8
        Label:
            text: '[b]Expiration Date[/b]'
            markup: True
            size_hint: None, None
            size: 150, 50
        SmallInputBox:
            size: 80, 45
        SmallInputBox:
            size: 80, 45
        SmallInputBox:
            size: 80, 45
    BoxLayout:
        id: _bind_card_popup_footer

#Popup layout for card info
<CardInfoPopup>:
    card_image: _card_image
    orientation: 'vertical'
    Image:
        id: _card_image
        source: 'res/Images/credit_card.png'
    BoxLayout:
        Button:
            size_hint_y: .3
            text: 'Bind Card'
            on_release: root.bind_card_popup()
        Label:
            size_hint_x: .7
        Button:
            size_hint_y: .3
            text: 'Change Card'

<ProfileImage>:

<ProfileLayout>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            size_hint_x: .3
        ProfileImage:
            source: 'res/Images/male_profile.png'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                Label:
                    bold: True
                    text: 'Status: '
                Label:
                    bold: True
                    size_hint_x: .05
                    text: root.regular_status
            BoxLayout:
                Label:
                    bold: True
                    text: 'Join Date:'
                Label:
                    bold: True
                    size_hint_x: .05
                    text: root.join_date
        Label:
    Label:
        text: 'footer'

<ProfileScreenLayout>:
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager

    ToolBarHeader:
        screen_manager: root.screen_manager
    ProfileLayout:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: top_height
        canvas:
            Color:
                rgba: 0.25, 0.25, 0.25, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            on_release:
            text: '[b]Change Password[/b]'
        InterfaceButton:
            on_release: root.card_info()
            text: '[b]Card Info[/b]'
        InterfaceButton:
            on_release: root.screen_manager.current = 'login_screen'
            on_release: root.screen_manager.transition = CardTransition(direction='down', mode='push')
            text: '[b]Logout[/b]'