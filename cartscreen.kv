<CartScreen@Screen>:
    name: 'cart_screen'
    screen_manager: self.screen_manager

    CartScreenLayout:
        screen_manager: root.screen_manager

<CartItem>:
    size_hint_y: None
    height: 35
    spacing: 60
    Label:
        text: root.name
    Label:
        size_hint_x: .2
        text: str(root.quantity)
    Label:
        size_hint_x: .3
        text: '$' + str(root.price)

<CartLayout>:
    orientation: 'vertical'

<CartScreenLayout>:
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager
    canvas.before:
        Color:
            rgba: .25, 1, 0, .3
        Rectangle:
            pos: self.pos
            size: self.size

    ToolBarHeader:
        screen_manager: root.screen_manager
    BoxLayout:
        size_hint_y: None
        height: 65
        spacing: 60
        Label:
            text: 'Name'
        Label:
            size_hint_x: .2
            text: 'Quantity'
        Label:
            size_hint_x: .3
            text: 'Price'
    AnchorLayout:
        anchor_y: 'top'
        size_hint_y:
        height: root.height - (2 * top_height)
        CartLayout:
            size_hint_y: None
            height: self.minimum_height
    BoxLayout:
        size_hint_y: None
        height: 35
        spacing: 60
        Label:
        Label:
            size_hint_x: .2
            text: 'Item count: '
        Label:
            size_hint_x: .3
            text: 'Sum: '


    ToolBarFooter:
        InterfaceButton:
            on_release: root.help()
            text: '[b]Help[/b]'
        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            on_release: root.screen_manager.current = "shop_screen"
            text: '[b]Shop For More[/b]'
        InterfaceButton:
            on_release: root.clear_cart()
            text: '[b]Clear Cart[/b]'
        InterfaceButton:
            on_release:
            text: '[b]Pay[/b]'