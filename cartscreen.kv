# link to screen manager
<CartScreen@Screen>:
    name: 'cart_screen'
    screen_manager: self.screen_manager

    CartScreenLayout:
        screen_manager: root.screen_manager

# layout for pay popup
<PayLayout>:
    pay_footer: _pay_footer
    address: _address
    pay_amount: _pay_amount
    orientation: 'vertical'
    Label:
        bold: True
        valign: 'middle'
        font_size: 45
        text: 'PAY'
    InputBox:
        id: _address
        l_text: 'Address: '
        size_hint_y: .5
    InputBox:
        id: _pay_amount
        l_text: 'Pay Amount: '
        size_hint_y: .5
    BoxLayout:
        id: _pay_footer

# layout for receipt popup
<ReceiptLayout>
    orientation: 'vertical'
    receipt_address: _receipt_address
    receipt_data: _receipt_data
    date: _date
    card_text: _card_text
    card: _card
    receipt_name: _receipt_name
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: .3
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .7
            Label:
                bold: True
                font_size: 15
                text: 'Energy Max'
                pos_hint: {'center': .5}
        Label:
            size_hint_y: .5
    AnchorLayout:
        anchor_y: 'top'
        height: root.height - (2 * top_height)
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            id: _receipt_data
            orientation: 'vertical'
    BoxLayout:
        size_hint_y: .25
        BoxLayout:
            spacing: 22.5
            orientation: 'vertical'
            size_hint_y: .6
            Label:
                size_hint_y: .6
                text: 'Name: '
            Label:
                size_hint_y: .6
                text: 'Address: '
            Label:
                text: 'Date: '
                size_hint_y: .6
            Label:
                size_hint_y: .6
                id: _card_text

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .6
            spacing: 22.5
            Label:
                id: _receipt_name
                size_hint_y: .6
            Label:
                size_hint_y: .6
                id: _receipt_address
            Label:
                id: _date
                size_hint_y: .6
            Label:
                size_hint_y: .6
                id: _card
    Label:
        size_hint_y: .2

# layout for each cart item instance
<CartItem>:
    size_hint_y: None
    height: 35
    spacing: 60
    canvas.before:
        Line:
            points: root.x, root.y, root.width, root.y
            width: 1.25
    Label:
        text: root.name
    Label:
        size_hint_x: .2
        text: str(root.quantity)
    Label:
        size_hint_x: .3
        text: '$' + str(root.price)

# layout for each receipt item instance
<ReceiptItem>:
    size_hint_y: None
    height: 25
    spacing: 32.5
    Label:
        text: root.name
    Label:
        size_hint_x: .2
        text: str(root.quantity)
    Label:
        size_hint_x: .3
        text: '$' + str(root.price)

# layout for cart layout in cart screen
<CartLayout>:
    orientation: 'vertical'

# layout for each row at the bottom of the receipt popup
<ReceiptFooter>:
    left_name: _left_name
    right_name: _right_name
    sum: _sum
    number: _number
    right_box: _right_box
    size_hint_y: None
    height: 25
    spacing: 30
    Label:
        size_hint_x: .2
    BoxLayout:
        size_hint_x: .3
        spacing: 10
        Label:
            size_hint_x: .4
            id: _left_name
        Label:
        Label:
            size_hint_x: .5
            id: _number
    Label:
        size_hint_x: .05
    BoxLayout:
        id: _right_box
        spacing: 10
        size_hint_x: .5
        Label:
            id: _right_name
            size_hint_x: .5
        Label:
            size_hint_x: .6
            id: _sum

# layout for the whole cart screen
<CartScreenLayout>:
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager
    sum: _sum
    item_count: _item_count
    discount: _discount
    ToolBarHeader:
        screen_manager: root.screen_manager
    # layout of a row at the top of cart layout
    BoxLayout:
        size_hint_y: None
        height: 65
        spacing: 60
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.75
            Line:
                points: 0, root.height-92.5, self.width, root.height-92.5
                width: 2.5
        Label:
            text: 'Name'
        Label:
            size_hint_x: .2
            text: 'Quantity'
        Label:
            size_hint_x: .3
            text: 'Price'
    # cart layout
    AnchorLayout:
        anchor_y: 'top'
        height: root.height - (2 * top_height)
        CartLayout:
            size_hint_y: None
            height: self.minimum_height
    # layout of a row at the bottom of cart layout to display total amount, item count and total discount
    BoxLayout:
        size_hint_y: None
        height: 35
        spacing: 60
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.75
            Line:
                points: 0, self.height+47.5, self.width, self.height+47.5
                width: 2.5

        Label:
            size_hint_x: .75
        BoxLayout:
            size_hint_x: .2
            Label:
                text: 'Discount: '
            Label:
                id: _discount
        BoxLayout:
            size_hint_x: .2
            Label:
                text: 'Item count: '
            Label:
                id: _item_count
        BoxLayout:
            size_hint_x: .225
            Label:
                size_hint_x: .8
                text: 'Sum: '
            Label:
                id: _sum

    ToolBarFooter:
        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            on_release: root.clear_cart()
            text: '[b]Clear Cart[/b]'
        InterfaceButton:
            on_release: root.screen_manager.current = "shop_screen"
            text: '[b]Shop For More[/b]'
        InterfaceButton:
            on_release: root.pay()
            text: '[b]Pay[/b]'