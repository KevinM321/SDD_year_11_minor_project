<CartScreen@Screen>:
    name: 'cart_screen'
    screen_manager: self.screen_manager

    CartScreenLayout:
        screen_manager: root.screen_manager

<PayLayout>:
    pay_footer: _pay_footer
    pay_amount: _pay_amount
    orientation: 'vertical'
    BoxLayout:
    InputBox:
        id: _pay_amount
        l_text: 'Pay Amount'
    BoxLayout:
        id: _pay_footer

<ReceiptLayout>
    orientation: 'vertical'
    receipt_data: _receipt_data
    date: _date
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: .4
        Label:
            bold: True
            text: 'Energy Max'
            pos_hint: {'center': .5}
        Label:
            id: _date
    BoxLayout:
        orientation: 'vertical'
        id: _receipt_data
    Label:
        size_hint_y: .45

<CartItem>:
    size_hint_y: None
    height: 35
    spacing: 60
    Label:
        text: root.name
    Label:
        size_hint_x: .2
        text: str(root.quantity)
    Label:
        size_hint_x: .3
        text: '$' + str(root.price)

<CartLayout>:
    orientation: 'vertical'

<ReceiptFooter>:
    item_count: _item_count
    sum: _sum
    size_hint_y: None
    height: 25
    spacing: 40
    Label:
        size_hint_x: .5
    BoxLayout:
        size_hint_x: .45
        Label:
            text: 'Item count: '
        Label:
        Label:
            size_hint_x: .5
            id: _item_count
    BoxLayout:
        size_hint_x: .5
        Label:
            text: 'Sum: '
        Label:
            id: _sum

<CartScreenLayout>:
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager
    sum: _sum
    item_count: _item_count
    ToolBarHeader:
        screen_manager: root.screen_manager
    BoxLayout:
        size_hint_y: None
        height: 65
        spacing: 60
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.5
            Line:
                points: 0, root.height-92.5, self.width, root.height-92.5
                width: 2.5
        Label:
            text: 'Name'
        Label:
            size_hint_x: .2
            text: 'Quantity'
        Label:
            size_hint_x: .3
            text: 'Price'
    AnchorLayout:
        anchor_y: 'top'
        height: root.height - (2 * top_height)
        CartLayout:
            size_hint_y: None
            height: self.minimum_height
    BoxLayout:
        size_hint_y: None
        height: 35
        spacing: 60
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.5
            Line:
                points: 0, self.height+47.5, self.width, self.height+47.5
                width: 2.5

        Label:
        BoxLayout:
            size_hint_x: .2
            Label:
                text: 'Item count: '
            Label:
                id: _item_count
        BoxLayout:
            size_hint_x: .225
            Label:
                text: 'Sum: '
            Label:
                id: _sum

    ToolBarFooter:
        InterfaceButton:
            on_release: root.help()
            text: '[b]Help[/b]'
        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            on_release: root.clear_cart()
            text: '[b]Clear Cart[/b]'
        InterfaceButton:
            on_release: root.screen_manager.current = "shop_screen"
            text: '[b]Shop For More[/b]'
        InterfaceButton:
            on_release: root.pay()
            text: '[b]Pay[/b]'