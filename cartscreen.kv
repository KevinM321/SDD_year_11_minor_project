<CartScreen@Screen>:
    name: 'cart_screen'
    screen_manager: self.screen_manager

    CartScreenLayout:
        screen_manager: root.screen_manager

<CartItem>:
    spacing: 60
    Label:
        text: root.name
    Label:
        text: str(root.quantity)

<CartLayout>:
    orientation: 'vertical'

<CartScreenLayout>:
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager

    ToolBarHeader:
        screen_manager: root.screen_manager
    AnchorLayout:
        anchor_y: 'top'
        size_hint_y: None
        height: root.height - (2 * top_height)
        canvas:



#            Line:
#                rectangle: 0, 0, self.width, self.height

        CartLayout:
            size_hint_y: None
            height: self.minimum_height

    ToolBarFooter:
        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            on_release: root.screen_manager.current = "shop_screen"
            text: '[b]Shop For More[/b]'
        InterfaceButton:
            on_release:
            text: '[b]Pay[/b]'