#:import CardTransition kivy.uix.screenmanager.CardTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

# screen manager defined to connect all the screens
<EMScreenManager>:
    id: _screen_manager
    transition: CardTransition(direction="up")
    current: 'login_screen'
    LoginScreen:
        screen_manager: _screen_manager
    ShopScreen:
        screen_manager: _screen_manager
    CartScreen:
        screen_manager: _screen_manager
    LuckyDrawScreen:
        screen_manager: _screen_manager
    ProfileScreen:
        screen_manager: _screen_manager