#:import Color kivy.graphics

<LuckyDrawScreen@Screen>:
    name: 'lucky_draw_screen'
    screen_manager: self.screen_manager

    LuckyDrawScreenLayout:
        screen_manager: root.screen_manager

<LuckyDrawImage>:

<LuckyDrawScreenLayout>:
    lucky_draw_display: _lucky_draw_display
    lucky_draw_layout: _lucky_draw_layout.__self__
    orientation: 'vertical'
    id: screen_manager
    screen_manager: root.screen_manager

    ToolBarHeader:
        screen_manager: root.screen_manager

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0, .6, 1, .3
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
        BoxLayout:
            orientation: 'vertical'
            id: _lucky_draw_layout
            LuckyDrawImage:
                id: _lucky_draw_display
        Label:

    ToolBarFooter:
        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            text: '[b]Start[/b]'
            on_release: root.lucky_draw()
            on_release: root.t = 0
        InterfaceButton:
            on_release: root.screen_manager.current = "shop_screen"
            text: '[b]Back[/b]'
