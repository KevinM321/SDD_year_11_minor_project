<LuckyDrawScreen@Screen>:
    name: 'lucky_draw_screen'
    screen_manager: self.screen_manager

    LuckyDrawScreenLayout:
        screen_manager: root.screen_manager


<LuckyDrawScreenLayout>:
    lucky_draw_display: _lucky_draw_display
    orientation: 'vertical'
    ToolBarHeader:

    BoxLayout:
        Label:
        Image:
            id: _lucky_draw_display
        Label:

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: top_height
        canvas:
            Color:
                rgba: 0.25, 0.25, 0.25, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            pos: 0, 1
            size_hint: .8, 1
        InterfaceButton:
            text: '[b]Start[/b]'
            on_release: root.lucky_draw()
        InterfaceButton:
            on_release: root.screen_manager.current = "shop_screen"
            text: '[b]Back[/b]'
